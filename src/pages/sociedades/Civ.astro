---
import Layout from '../../layouts/Layout.astro';
import Button from '../../components/ui/Button.astro';
import { BRAND } from 'astro:schema';
import Carousel from '../../components/ui/Carousel.astro';
import FlipCard from '../../components/ui/Target.astro';
import ImageFocusGallery from '../../components/ui/ImageFocusGallery.astro';
import CardsNotices from '../../components/ui/CardsNotices.astro';
import { db, News, Usuarios } from 'astro:db';

const items = [
  {
    img: '/src/Image/SocCiv/Logo_carrera1.png',
    text: 'Carrera de Ing. Civil',
    text_URL: 'https://portal2.sistemas.edu.bo/',
  },
  {
    img: '/src/Image/SocCiv/Logo_Soc.png',
    text: 'So.C.E.I.C.',
    text_URL: 'https://portal2.sistemas.edu.bo/',
  },
];
// Obtener noticias de SisInf desde la base de datos
const noticiasAll = await db.select().from(News);

const noticiasSisInf = noticiasAll.filter((noticia) => noticia.userId === 3);

---

<Layout
  title="So.C.E.I.C."
  description="Bienvenido a mi aplicación construida con Astro y las mejores prácticas de desarrollo web"
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-blue-600 to-indigo-50 py-20">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <div class="flex justify-between items-center">
          <!-- Logo Izquierdo -->
          <img src="/src/Image/UTO.png" alt="Logo izquierdo" class="w-30 h-auto" />
          <h1 class="text-4xl md:text-4xl font-bold text-gray-900 mb-6">
            <span style="color:#C6CBD1" class="font-bold drop-shadow-[2px_2px_0px_black]">
              Sociedad Científica de Estudiantes de<br /> Ingeniería Civil
            </span>
          </h1>
          <!-- Logo derecho -->
          <img src="/src/Image/FNI.png" alt="Logo derecho" class="w-30 h-auto" />
        </div>
        <div class="flex gap-8 py-10">
          <div class="w-1/2 flex-none">
            <h4 class="text-5xl text-[#C6CBD1] font-bold text-justify px-4 mb-4 drop-shadow-[2px_2px_0px_black]">
              Nuestra Historia
            </h4>
            <p class="text-xl text-[#C6CBD1] text-justify px-4 leading-relaxed font-bold drop-shadow-[2px_2px_0px_black]">
              La SOCIEDAD CIENTIFICA DE ESTUDIANTES DE INGENIERÍA CIVIL 
              (So.C.E.I.C.) fué fundada el 24 de Marzo de 2018 y es acreditada bajo 
              el Honorable Consejo Universitario.
            </p>
          </div>
          <div class="w-1/2 flex-none">
            <ImageFocusGallery items={items} textColor="text-[#C6CBD1] font-bold drop-shadow-[2px_2px_0px_black]" columnsPerRow={2}/>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Noticias</h2>
        <!-- Mostrar noticias de SisInf -->
        <CardsNotices noticias={noticiasSisInf} />
      </div>

      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Nuestra Directiva</h2>
        <div class="flex flex-wrap justify-center gap-6">
          <FlipCard
            name="Univ. Rocha Zubieta Karen Soledad"
            role="Presidente de la Sociedad Científica So.C.E.I.C."
            email="Soledad24fenix@gmail.com"
            phone="+591 68298255"
            photo="/src/Image/SocCiv/Presi.jpeg"
          />
          <FlipCard
            name="Univ. Paqui Huayllas Nelson Gustavo"
            role="Vicepresidente de la Sociedad Científica So.C.E.I.C."
            email="nelsonpaqui@gmail.com"
            phone="+591 77147456"
            photo="/src/Image/SocCiv/Vice.jpeg"
          />
          <FlipCard
            name="Univ. Lia Veronica Alicia "
            role="Secretaria General de la Sociedad Científica So.C.E.I.C."
            email="Liaveronica49@gmail.com"
            phone="+591 683999001"
            photo="/src/Image/SocCiv/General.jpeg"

          />
          <FlipCard
            name="Univ. Gomez Garcia Vargas Tatiana Katherin "
            role="Secretaria de Hacienda de la Sociedad Científica So.C.E.I.C."
            email="tatykggv@gmail.com"
            phone="+591 75411306"
            photo="/src/Image/SocCiv/Hacienda.jpeg"
          />
          <FlipCard
            name="Univ. Aranibar Agreda Mauricio Benjamin"
            role="Secretario de Difusión de la Sociedad Científica So.C.E.I.C."
            email="agredamauricio7@gmail.com"
            phone="+591 74840219"
            photo="/src/Image/SocCiv/Difusion.jpeg"

          />
          <FlipCard
            name="Univ. Barreta Villca Diego Raul"
            role="Secretario de Actas de la Sociedad Científica So.C.E.I.C."
            email="diegobarretavillca@gmail.com"
            phone="+591 70414217"
            photo="/src/Image/SocCiv/Actas.jpeg"

          />
          <FlipCard
            name="Univ. Caceres Troncozo Anahi Yashira"
            role="Vocal de la Sociedad Científica So.C.E.I.C."
            email="caceresanahi778@gmail.com"
            phone="+591 71850776"
            photo="/src/Image/SocCiv/Vocal.jpeg"

          />
        </div>
      </div>

      <div class="bg-purple-50 py-16 px-6">
        <div class="max-w-5xl mx-auto text-center">
          <h2 class="text-4xl font-bold text-purple-900 mb-10">Misión y Visión</h2>
          <div class="grid md:grid-cols-2 gap-8">
            
            <!-- Misión -->
            <div class="bg-white p-8 rounded-xl shadow-md border-t-4 border-purple-300">
              <h3 class="text-2xl font-semibold text-purple-700 mb-4">Nuestra Misión</h3>
              <p class="text-gray-700 leading-relaxed text-justify">
                La SOCIEDAD CIENTIFICA DE ESTUDIANTES DE INGENIERIA CIVIL tiene la misión de desarrollar y 
                producir investigación científica-tecnológica en beneficio y progreso de la sociedad, e 
                interactuar con la comunidad estudiantil.
              </p>
            </div>
            
            <!-- Visión -->
            <div class="bg-white p-8 rounded-xl shadow-md border-t-4 border-purple-300">
              <h3 class="text-2xl font-semibold text-purple-700 mb-4">Nuestra Visión</h3>
              <p class="text-gray-700 leading-relaxed text-justify">
                La SOCIEDAD CIENTIFICA DE ESTUDIANTES DE INGENIERIA CIVIL, busca motivar una cultura de 
                investigación y planificación de manera que sea competitiva a nivel nacional e internacional, 
                llegando a 
                formar líderes del mañana con ideas innovadoras, comprometidos con el desarrollo del país, 
                sirviendo de modelo a través del cumplimiento de sus principios. 
              </p>
            </div>

          </div>
        </div>
      </div>
      
      <div class="text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">¿Cómo ser parte?</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center p-6">
            <div
              class="w-12 h-12 bg-blue-100 rounded-lg mx-auto mb-4 flex items-center justify-center"
            >
              <svg
                class="w-12 h-12 text-blue-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"
                ></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 3v6h6"
                ></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6"
                ></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17h6"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Matricula Universitaria</h3>
            <p class="text-gray-600">
              Presenta tu matricula del semestre actual, la cual se puede descargar de:
              <br /><a class="text-blue-600 hover:underline" href="https://matricula.uto.edu.bo/">
                Consulta Matricula U.T.O.</a
              >
            </p>
          </div>

          <div class="text-center p-6">
            <div
              class="w-12 h-12 bg-green-100 rounded-lg mx-auto mb-4 flex items-center justify-center"
            >
              <svg
                class="w-12 h-12 text-blue-600"
                fill="none"
                viewBox="0 0 64 64"
                stroke="currentColor"
                xmlns="http://www.w3.org/2000/svg"
              >
                <!-- Borde del carnet -->
                <rect
                  x="4"
                  y="8"
                  width="56"
                  height="48"
                  rx="4"
                  stroke-width="2"
                  stroke="currentColor"
                  fill="none"></rect>
                <!-- Silueta del usuario -->
                <circle cx="20" cy="28" r="6" stroke-width="2" stroke="currentColor" fill="none"
                ></circle>
                <path
                  d="M14 40c0-4 4-6 6-6s6 2 6 6"
                  stroke-width="2"
                  stroke="currentColor"
                  fill="none"></path>
                <!-- Líneas de texto -->
                <line x1="34" y1="22" x2="50" y2="22" stroke-width="2" stroke="currentColor"></line>
                <line x1="34" y1="30" x2="50" y2="30" stroke-width="2" stroke="currentColor"></line>
                <line x1="34" y1="38" x2="50" y2="38" stroke-width="2" stroke="currentColor"></line>
              </svg>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-2">
                Carnet de Identidad <br /> o <br />Carnet Universitario
              </h3>
              <p class="text-gray-600">
                Cualquiera de los documento para poder identificarte junto con la matricula
              </p>           
          </div>
            <div class="text-center p-6">
              <div
                class="w-12 h-12 bg-purple-100 rounded-lg mx-auto mb-4 flex items-center justify-center"
              >
                <svg
                  class="w-12 h-12 text-blue-600"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <rect
                    x="3"
                    y="3"
                    width="18"
                    height="18"
                    rx="2"
                    stroke-width="2"
                    stroke="currentColor"
                    fill="none"></rect>
                  <line x1="7" y1="8" x2="17" y2="8" stroke-width="2" stroke="currentColor"></line>
                  <line x1="7" y1="12" x2="17" y2="12" stroke-width="2" stroke="currentColor"></line>
                  <line x1="7" y1="16" x2="13" y2="16" stroke-width="2" stroke="currentColor"></line>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-2">Formulario de Inscripcion</h3>
              <p class="text-gray-600">
                Formulario de no participación de alguna entidad políitica y/o partidaria de algun
                centro facultativo o de carrera
                <br /><a class="text-blue-600 hover:underline" href="https://docs.google.com/spreadsheets/d/1FtsuWQa7_OlWuXJzL_LDw1zUMV1zT7FC/edit?usp=drive_link&ouid=104725137215055273039&rtpof=true&sd=true">
                  Formulario de Inscripcion</a
                >
              </p>
            </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
