---
// Puedes recibir props si lo deseas:
const { name, role, email, phone, photo, facebook, linkedin } = Astro.props;
---

<div class="w-[300px] h-[400px] perspective cursor-pointer">
  <div class="relative w-full h-full transition-transform duration-700 transform-style-preserve-3d hover:rotate-y-180">
    <!-- Frente -->
    <div class="absolute w-full h-full backface-hidden bg-[#B0D9D5] rounded-xl shadow-lg p-4 flex flex-col items-center justify-center">
      <img src={photo} class="w-50 h-50 rounded-full mb-4" />
      <h2 class="text-xl font-bold">{name}</h2>
      <p class="text-sm text-gray-500">{role}</p>
    </div>

    <!-- Reverso -->
    <div class="absolute w-full h-full backface-hidden bg-[#023059] text-white rounded-xl shadow-lg p-4 transform rotate-y-180 flex flex-col justify-center items-center">
      <p class="mb-2">âœ‰ï¸ {email}</p>
      <p class="mb-2">ğŸ“ {phone}</p>
      <div class="flex space-x-4 mt-4">
        <a href={facebook}><img src="/facebook.svg" class="w-6 h-6" /></a>
        <a href={linkedin}><img src="/linkedin.svg" class="w-6 h-6" /></a>
      </div>
    </div>
  </div>
</div>

<style>
  .perspective {
    perspective: 1000px;
  }
  .transform-style-preserve-3d {
    transform-style: preserve-3d;
  }
  .backface-hidden {
    backface-visibility: hidden;
  }
  .rotate-y-180 {
    transform: rotateY(180deg);
  }
</style>
